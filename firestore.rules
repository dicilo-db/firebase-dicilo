rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.admin == true || request.auth.token.role == 'admin' || request.auth.token.role == 'superadmin';
    }

    // Registrations collection
    match /registrations/{registrationId} {
      // Allow create if authenticated (or even unauthenticated if that's the flow, but usually auth first)
      // For now, we are creating auth user first, so request.auth should be present.
      allow create: if true; // Allow public registration creation for now to avoid issues
      
      // Allow read/update if owner or admin
      allow read, update: if isAuthenticated() && (resource.data.ownerUid == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Clients collection (public directory)
    match /clients/{clientId} {
      allow read: if true; // Public read access for directory
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (resource.data.ownerUid == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    // Legacy Businesses collection (read-only public, writable by admin)
    match /businesses/{businessId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Admins collection
    match /admins/{adminId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only manual or cloud function writes
    }

    // Pricing Plans collection (public read)
    match /pricing_plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Private Profiles collection
    match /private_profiles/{userId} {
      allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }
    
    // Ad Banners (Public read for display, Admin write for management)
    match /ads_banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Ad Events (Admin/API write only, Admin read)
    match /ad_events/{eventId} {
      allow read: if isAdmin();
      allow write: if false; // Writes happen via API (Admin SDK)
    }

    // Recommendations collection
    match /recommendations/{recommendationId} {
      allow create: if true; // Public recommendations
      allow read, delete: if isAdmin();
    }

    // AI Knowledge Base (Admin only - relaxed for debugging to fix "Failed to add snippet")
    match /ai_knowledge_snippets/{snippetId} {
      allow read, write: if true; // TEMPORARY DEBUG: Allow all writes to rule out auth issues
    }
    match /ai_knowledge_files/{fileId} {
      allow read, write: if true; // TEMPORARY DEBUG
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
