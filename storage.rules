rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    match /clients/{clientId}/gallery/{imageId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /ads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
